<UserControl xmlns="https://github.com/avaloniaui"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:bhv="clr-namespace:CosmosDBStudio.Avalonia.Behaviors"
             mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
             x:Class="CosmosDBStudio.Avalonia.View.TextPromptView"
             MinHeight="60" Width="400">
    <Grid RowDefinitions="Auto,Auto">
        <Label Grid.Row="0" Content="{Binding Prompt}" HorizontalAlignment="Left" />
        <TextBox Grid.Row="1" Text="{Binding Text}" Margin="5">
            <Interaction.Behaviors>
                <bhv:FocusOnLoadBehavior />
            </Interaction.Behaviors>
        </TextBox>
    </Grid>
</UserControl>
